#include <iostream>
using namespace std;
int main() {
    int n;

    cout << "Introduce el valor de n: ";
    cin >> n;

    for (int i = 0; i < n; ++i) {
        // Imprimir ceros
        for (int j = 0; j < i; ++j) {
            cout << "0";
        }
        // Imprimir uno
        cout << "1";

        // Nueva línea después de cada fila
        cout << endl;
    }

    return 0;
}
